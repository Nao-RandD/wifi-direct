<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/container_images"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/gradient_list"
           tools:context=".image.ImageFragment">

              <TextView
                  android:id="@+id/textView_sever_1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="16dp"
                  android:text="@string/text_sever_view_1"
                  android:textAlignment="center"
                  android:textSize="30dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />


              <TextView
                  android:id="@+id/textview_sever_2"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/text_sever_view_2"
                  android:textAlignment="center"
                  android:textSize="30dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/textView_sever_1" />

              <androidx.recyclerview.widget.RecyclerView
                  android:id="@+id/gallery_images"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/textview_sever_2"
                  tools:layout_editor_absoluteX="137dp" />

              <androidx.constraintlayout.widget.Guideline
                  android:id="@+id/top_guideline"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  app:layout_constraintGuide_percent=".2" />

       </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

